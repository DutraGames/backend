// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Developer {
  id        String @id @default(uuid())
  name      String
  email     String
  website   String
  twitter   String
  instagram String
  about     String

  games Game[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("developers")
}

model Game {
  id          String @id @default(uuid())
  name        String
  description String
  xbox        String
  psn         String
  nintendo    String
  steam       String
  bannerUrl   String
  discord     String
  

  developers Developer[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("games")
}
